<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:background="@drawable/bat_bg"
    android:layout_height="match_parent"

    android:orientation="vertical"
    tools:context=".MainActivity">
<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_weight="3"

    android:orientation="vertical">

    <ImageView
        android:id="@+id/image"
        android:padding="5dp"
        android:layout_width="160dp"
        android:layout_height="0dp"
        android:src="@drawable/add_player"
        android:scaleType="fitXY"

        android:layout_margin="10dp"
        android:background="@drawable/border"
        android:layout_weight="0.7"
        android:layout_gravity="center"
        />
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"


        android:gravity="end"
        android:layout_marginRight="10dp"
        android:layout_marginLeft="10dp"

        android:background="@drawable/bg1111"

        android:weightSum="4">


        <TextView
            android:id="@+id/player_name"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_weight="3"
            android:fontFamily="sans-serif"
            android:gravity="left"


            android:paddingLeft="10dp"
            android:text="Player name"
            android:textColor="@color/black"
            android:textSize="20dp"
            android:textStyle="bold" />

        <ImageView
            android:id="@+id/edit"
            android:layout_width="0dp"
            android:layout_weight="0.5"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginRight="5dp"

            android:src="@drawable/ic_baseline_edit_24"

            android:gravity="center"

            android:textColor="@color/purple_active"

            />
        <ImageView
            android:id="@+id/delete"
            android:layout_width="0dp"
            android:layout_weight="0.5"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:src="@drawable/delete"
            android:gravity="center"
            android:textColor="@color/purple_active"
            />

    </LinearLayout>

    <com.gauravk.bubblenavigation.BubbleNavigationLinearView
        android:id="@+id/top_navigation_constraint"

        android:layout_marginTop="5dp"

        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="0.25"
        android:elevation="3dp"

        app:bnc_mode="inside">

        <com.gauravk.bubblenavigation.BubbleToggleView
            android:id="@+id/new_match"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:bt_active="true"
            android:layout_marginRight="10dp"
            android:padding="5dp"
            app:bt_colorActive="@color/purple_active"
            app:bt_colorInactive="@color/purple_inactive"
            app:bt_icon="@drawable/bats_man"

            app:bt_shape="@drawable/transition_background_drawable_default"

            app:bt_title="New Match"
            app:bt_titlePadding="8dp" />

        <com.gauravk.bubblenavigation.BubbleToggleView
            android:id="@+id/team"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:bt_colorActive="@color/purple_active"
            app:bt_colorInactive="@color/purple_inactive"
            android:layout_marginRight="10dp"

            app:bt_icon="@drawable/team"
            app:bt_padding="12dp"
            app:bt_shape="@drawable/transition_background_drawable_default"
            app:bt_title="Manage Team"
            app:bt_titlePadding="8dp" />

        <com.gauravk.bubblenavigation.BubbleToggleView
            android:id="@+id/history"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:bt_colorActive="@color/purple_active"
            app:bt_colorInactive="@color/purple_inactive"
            android:layout_marginRight="10dp"

            app:bt_icon="@drawable/history"
            app:bt_padding="12dp"
            app:bt_shape="@drawable/transition_background_drawable_default"
            app:bt_title="History"
            app:bt_titlePadding="8dp" />
    </com.gauravk.bubblenavigation.BubbleNavigationLinearView>


    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="2"
        android:id="@+id/content_frame"/>

</LinearLayout>



</LinearLayout>