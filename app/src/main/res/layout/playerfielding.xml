<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">


    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="10dp"
                android:orientation="horizontal"
                android:weightSum="3">
                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:background="@drawable/bg1111"
                    android:layout_margin="10dp"

                    android:layout_height="100dp"
                    android:orientation="vertical"
                    android:weightSum="3">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="0dp"
                        android:layout_weight="1"
                        android:gravity="center"
                        android:text="Matches"
                        android:textSize="18dp"
                        android:textColor="@color/black"

                        />
                    <TextView
                        android:id="@+id/matches"


                        android:layout_width="match_parent"
                        android:layout_height="0dp"
                        android:layout_weight="2"
                        android:gravity="center"
                        android:text="6"
                        android:textStyle="bold"
                        android:textSize="25dp"
                        android:textColor="@color/black"

                        />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:background="@drawable/bg1111"
                    android:layout_margin="10dp"

                    android:layout_height="100dp"
                    android:orientation="vertical"
                    android:weightSum="3">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="0dp"
                        android:layout_weight="1"
                        android:gravity="center"
                        android:text="Innings"
                        android:textSize="18dp"
                        android:textColor="@color/black"

                        />
                    <TextView
                        android:id="@+id/innings"

                        android:layout_width="match_parent"
                        android:layout_height="0dp"
                        android:layout_weight="2"
                        android:gravity="center"
                        android:text="6"
                        android:textStyle="bold"
                        android:textSize="25dp"
                        android:textColor="@color/black"

                        />

                </LinearLayout>



                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:background="@drawable/bg1111"
                    android:layout_margin="10dp"

                    android:layout_height="100dp"
                    android:orientation="vertical"
                    android:weightSum="3">

                    <TextView


                        android:layout_width="match_parent"
                        android:layout_height="0dp"
                        android:layout_weight="1"
                        android:gravity="center"
                        android:text="Catches"
                        android:textSize="18dp"
                        android:textColor="@color/black"

                        />
                    <TextView                        android:id="@+id/catches"

                        android:layout_width="match_parent"
                        android:layout_height="0dp"
                        android:layout_weight="2"
                        android:gravity="center"
                        android:text="6"
                        android:textStyle="bold"
                        android:textSize="25dp"
                        android:textColor="@color/black"

                        />

                </LinearLayout>

            </LinearLayout>


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="10dp"
                android:orientation="horizontal"
                android:weightSum="3">
                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:background="@drawable/bg1111"
                    android:layout_margin="10dp"

                    android:layout_height="100dp"
                    android:orientation="vertical"
                    android:weightSum="3">

                    <TextView

                        android:layout_width="match_parent"
                        android:layout_height="0dp"
                        android:layout_weight="1"
                        android:gravity="center"
                        android:text="Stumping"
                        android:textSize="18dp"
                        android:textColor="@color/black"

                        />
                    <TextView                            android:id="@+id/stumping"

                        android:layout_width="match_parent"
                        android:layout_height="0dp"
                        android:layout_weight="2"
                        android:gravity="center"
                        android:text="6"
                        android:textStyle="bold"
                        android:textSize="25dp"
                        android:textColor="@color/black"

                        />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:background="@drawable/bg1111"
                    android:layout_margin="10dp"

                    android:layout_height="100dp"
                    android:orientation="vertical"
                    android:weightSum="3">

                    <TextView

                        android:layout_width="match_parent"
                        android:layout_height="0dp"
                        android:layout_weight="1"
                        android:gravity="center"
                        android:text="Run Outs"
                        android:textSize="18dp"
                        android:textColor="@color/black"

                        />
                    <TextView
                        android:id="@+id/run_outs"

                        android:layout_width="match_parent"
                        android:layout_height="0dp"
                        android:layout_weight="2"
                        android:gravity="center"
                        android:text="6"
                        android:textStyle="bold"
                        android:textSize="25dp"
                        android:textColor="@color/black"

                        />

                </LinearLayout>





            </LinearLayout>


        </LinearLayout>
    </ScrollView>

</LinearLayout>